<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- 절대 경로 설정 -->
    <property name="LOG_PATH" value="/var/log/reciping/backoffice-service"/> <!-- 디렉토리 경로 -> 여기에 로그가 저장 -->
    <property name="LOG_FILE" value="recipe-backoffice-app"/>  <!-- 로그 파일의 이름 -> 나중에 /var/log/reciping/user-service/user-service-app.log로 치환됨 -->

    <!-- 콘솔 로그 Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 파일 기반 Appender(=파일에 로그를 기록) : 로그를 어디에 출력할지 설정하는 부분 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE}.log</file> <!-- 출력 예시) /var/log/reciping/backoffice-service/backoffice-service-app.log -->

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>14</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId}] %logger{36} - %msg%n</pattern>
            <immediateFlush>true</immediateFlush> <!-- 로그를 버퍼에 모았다가 쓰지 않고, 매번 바로 디스크에 flush(쓰기 완료)하겠다는 뜻 -->
        </encoder>
    </appender>

    <!-- 커스텀 파일 로그 기반 Appender(AdminRecipeController 에 대한 커스텀 파일 로그 기록) -->
    <appender name="ADMIN_RECIPE_CONTROLLER_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/BackofficeController.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/BackofficeController.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory> <!-- 사인업 : 30일 이상 / 겟마이 프로필 : 14일 / 업데이트마이프로필 : 14일 / 나머지 : 7일 -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId}] %logger{36} - %msg%n</pattern>
            <immediateFlush>true</immediateFlush>
        </encoder>
    </appender>

    <!-- 루트 로거 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- UserController 클래스에 대한 로거 -->
    <logger level="INFO"
            name="com.three.recipingbackofficeservicebe.recipe_management.controller.AdminRecipeController"
            additivity="false"> <!-- (additivity 는 상위 패키지 로그 전파 여부)-->
        <appender-ref ref="ADMIN_RECIPE_CONTROLLER_LOG" />
    </logger>


</configuration>